pipeline {
    agent none
    options {
        buildDiscarder(logRotator(numToKeepStr:'5'))
        timeout(time: 40, unit: 'MINUTES')
    }
    stages {
        stage('BuildAndEnv'){
            parallel {
                stage('build') {
                    agent{
                        node {
                            label 'windows'
                            customWorkspace "D:/workspace/jenkins/ci"
                        }
                    }
                    steps {
                        echo "%GIT_COMMIT%"
                    }
                }
            }
        }
        stage('Test') {
			agent{
                node {
                    label 'windows'
                    customWorkspace "D:/workspace/jenkins/ci"
                }
            }
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
			agent{
                node {
                    label 'windows'
                    customWorkspace "D:/workspace/jenkins/ci"
                }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }
}

