Subject: [PATCH] Use OpenSSL for libsrtp

---
 BUILD.gn | 8 ++++++++
 1 file changed, 8 insertions(+)

diff --git a/BUILD.gn b/BUILD.gn
index 6359585..722c111 100644
--- a/BUILD.gn
+++ b/BUILD.gn
@@ -2,6 +2,7 @@
 # Use of this source code is governed by a BSD-style license that can be
 # found in the LICENSE file.
 
++import("//build_overrides/ssl/ssl.gni")
 import("//testing/test.gni")
 
 declare_args() {
@@ -117,6 +118,13 @@ static_library("libsrtp") {
   public_deps = [
     "//third_party/boringssl:boringssl",
   ]
+  if (owt_use_openssl) {
+    configs += [ "//build_overrides/ssl:external_openssl" ]
+  } else {
+    public_deps = [
+      "//third_party/boringssl:boringssl",
+    ]
+  }
 }
 
 if (build_libsrtp_tests) {
